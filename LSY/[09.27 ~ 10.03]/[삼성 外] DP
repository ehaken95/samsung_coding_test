#include <string>
#include <vector>

using namespace std;

int solution(vector<vector<int>> triangle)
{
    int answer = 0;
    int n=triangle.size();
    int d[501][501]={0,};
   
    d[0][0]=triangle[0][0];
    for(int i=1;i<n;++i)//행
    {
        for(int j=0;j<=i;++j)//열
        {
            if(j==0)
            {
                d[i][j]=d[i-1][0]+triangle[i][j];
            }
            else if(j==i)
            {
                d[i][j]=d[i-1][j-1]+triangle[i][j];
            }
            else
            {
                d[i][j]=max(d[i-1][j-1],d[i-1][j])+triangle[i][j];
            }
            if(i==n-1)answer=max(answer,d[n-1][j]);
        }
    }
    return answer;
}
